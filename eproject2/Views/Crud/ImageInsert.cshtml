@model eproject2.Models.UserProfile
@{
    ViewData["Title"] = "Profile Details";
}

<h2>User Profile Details</h2>

<div class="card" style="width: 18rem;">
    @if (!string.IsNullOrEmpty(Model.ProfileImage))
    {
        <img src="~/images/@Model.ProfileImage" class="card-img-top" alt="Profile Image">
    }
    else
    {
        <img src="~/images/default-user.png" class="card-img-top" alt="Default Image">
    }

    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text"><strong>Email:</strong> @Model.email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="card-text"><strong>Address:</strong> @Model.Address, @Model.City, @Model.Country</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role</p>
    </div>
</div>

<a asp-action="Welcome" class="btn btn-secondary mt-3">Back to List</a>
